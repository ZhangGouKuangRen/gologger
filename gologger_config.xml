        <selflevel>debug</selflevel>
        <format ref="first"/>
    </console>

    <wholefiles>
        <wholefile>
            <path>./log/wholeFile.log</path>
            <selflevel>info</selflevel>
            <format ref="first"/>
        </wholefile>
        <wholefile>
